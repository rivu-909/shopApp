<!DOCTYPE html>
<html lang="en">
    <%- include('../layouts/head.ejs') %>

    <body>
        <%- include('../layouts/navigation.ejs') %>
        <main>
            <ul class="cart__item-list">
                <% products.forEach(p=> { %>
                <li class="cart__item">
                    <div class="centered">
                        <div class="cart_product_title">
                            <h2><%= p.productId.title %></h2>
                        </div>

                        <div class="cart_product_quantity">
                            <h2>(<%= p.quantity %>)</h2>
                        </div>
                    </div>
                </li>
                <% }) %>
            </ul>
            <div class="centered">
                <h2>Total: <%= totalSum %></h2>
            </div>
            <div class="centered">
                <form action="/create-order" method="POST">
                    <input
                        type="hidden"
                        value="<%= csrfToken %>"
                        name="_csrf"
                    />
                    <button class="btn" type="submit">Pay</button>
                </form>
            </div>
        </main>
    </body>
</html>
